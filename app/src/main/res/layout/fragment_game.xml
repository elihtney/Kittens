<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tabletmainnobutton"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.kittenfactory.HomeActivity">


    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/next"
        android:background="@drawable/mixitup"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:background="@drawable/cat_button3"
        android:id="@+id/cat3"
        android:checked="false"
        android:layout_marginTop="67dp"
        android:clickable="false"
        android:contextClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/next"
        android:layout_alignEnd="@+id/next"
        android:layout_marginRight="91dp"
        android:layout_marginEnd="91dp"
        android:width="0dp" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:background="@drawable/cat_button1"
        android:id="@+id/cat1"
        android:checked="false"
        android:layout_alignTop="@+id/cat3"
        android:layout_toRightOf="@+id/cat4"
        android:layout_toEndOf="@+id/cat4" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:background="@drawable/cat_button4"
        android:id="@+id/cat4"
        android:checked="false"
        android:layout_alignTop="@+id/cat2"
        android:layout_alignLeft="@+id/cat3"
        android:layout_alignStart="@+id/cat3" />

    <CheckBox
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:background="@drawable/cat_button2"
        android:id="@+id/cat2"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cat4"
        android:layout_toEndOf="@+id/cat4" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.kittenfactory.HomeActivity">


    <Button
        android:layout_width="221dp"
        android:layout_height="313dp"
        android:id="@+id/cat2"
        android:background="@drawable/cat_button2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/next"
        android:layout_alignStart="@+id/next"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp" />

    <Button
        android:layout_width="221dp"
        android:layout_height="313dp"
        android:id="@+id/cat4"
        android:background="@drawable/cat_button4"
        android:layout_below="@+id/cat2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="84dp"
        android:layout_marginEnd="84dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/next"
        android:background="@drawable/mixitup"
        android:layout_below="@+id/cat3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="221dp"
        android:layout_height="313dp"
        android:id="@+id/cat1"
        android:background="@drawable/cat_button1"
        android:layout_above="@+id/cat4"
        android:layout_toLeftOf="@+id/next"
        android:layout_toStartOf="@+id/next" />

    <Button
        android:layout_width="221dp"
        android:layout_height="313dp"
        android:id="@+id/cat3"
        android:background="@drawable/cat_button3"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_below="@+id/cat2"
        android:layout_alignLeft="@+id/cat1"
        android:layout_alignStart="@+id/cat1"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp" />

</RelativeLayout>

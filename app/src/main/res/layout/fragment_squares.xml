<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tablenobutton"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.kittenfactory.HomeActivity">

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/seeResult"
        android:background="@drawable/nextbuttononmain"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="366dp"
        android:layout_marginStart="366dp"
        android:layout_marginTop="1100dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/imgCat1"
        android:src="@drawable/cat1"
        android:layout_alignBottom="@+id/imgCat2"
        android:layout_toLeftOf="@+id/imgCat2"
        android:layout_toStartOf="@+id/imgCat2"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/imgCat2"
        android:src="@drawable/cat2"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:layout_marginBottom="484dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_above="@+id/seeResult"
        android:layout_alignRight="@+id/seeResult"
        android:layout_alignEnd="@+id/seeResult" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/furColor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/furLength"
        android:layout_alignBottom="@+id/seeResult"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp" />

</RelativeLayout>
